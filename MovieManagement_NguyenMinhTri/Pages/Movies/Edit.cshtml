@page
@model MovieManagement_NguyenMinhTri.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.MovieId" />
            <div class="form-group">
                <label asp-for="Movie.MovieName" class="control-label"></label>
                <input asp-for="Movie.MovieName" class="form-control" />
                <span asp-validation-for="Movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ActorName" class="control-label"></label>
                <input asp-for="Movie.ActorName" class="form-control" />
                <span asp-validation-for="Movie.ActorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Duration" class="control-label"></label>
                <input asp-for="Movie.Duration" class="form-control" />
                <span asp-validation-for="Movie.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.DirectorName" class="control-label"></label>
                <input asp-for="Movie.DirectorName" class="form-control" />
                <span asp-validation-for="Movie.DirectorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CreatedAt" class="control-label"></label>
                <input readonly asp-for="Movie.CreatedAt" class="form-control" />
                <span asp-validation-for="Movie.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.UpdatedAt" class="control-label"></label>
                <input readonly asp-for="Movie.UpdatedAt" class="form-control" />
                <span asp-validation-for="Movie.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
